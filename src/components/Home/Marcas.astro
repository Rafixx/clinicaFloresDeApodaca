---
const MARCAS = [
  {
    name: "TOV MEDICAL",
    image: "/marcas/logo01.webp",
  },
  {
    name: "CARING INNOVATION",
    image: "/marcas/logo02.webp",
  },
  {
    name: "DERMIKA",
    image: "/marcas/logo03.webp",
  },
  {
    name: "MERZ AESTHETICS",
    image: "/marcas/logo04.webp",
  },
  {
    name: "NAQUA",
    image: "/marcas/logo05.webp",
  },
  {
    name: "SINCLAIR",
    image: "/marcas/logo06.webp",
  },
  {
    name: "SKI MEDIC",
    image: "/marcas/logo07.webp",
  },
  {
    name: "IT PHARMA",
    image: "/marcas/logo08.webp",
  },
  {
