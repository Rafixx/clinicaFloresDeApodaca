---
import Layout from "@/layouts/Layout.astro";

import SectionContainer from "@/components/Home/SectionContainer.astro";
import SectionFullX from "@/components/Home/SectionFullX.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import Carousel from "@/components/Home/Carousel.astro";
import Jumbotron from "@/components/Home/Jumbotron.astro";
import BannerClinica from "@/components/Home/BannerClinica.astro";
import BannerPreguntas from "@/components/Home/BannerPreguntas.astro";
import Reviews from "@/components/Home/Reviews.astro";
import Tratamientos from "@/components/Tratamientos/HomeTratamientos.astro";
import HeroUMERED from "@/components/Home/HeroUMERED.astro";
import Marcas from "@/components/Home/Marcas.astro";

type tLang = (str: any) => any;

const lang = getLangFromUrl(Astro.url);
const t: tLang = useTranslations(lang);
---

<Layout title={t("layout.title")} description={t("layout.description")}>
  <main class="">
    <SectionFullX id="home" class="py-16 md:py-24">
      <Carousel />
    </SectionFullX>
    <SectionContainer class="py-8 md:py-12">
      <Jumbotron />
    </SectionContainer>
    <SectionContainer class="py-8 md:py-12">
      <Tratamientos />
    </SectionContainer>
    <SectionContainer class="py-8 md:py-12">
      <Reviews />
    </SectionContainer>
    <SectionFullX class="py-16 md:py-12">
      <BannerClinica />
    </SectionFullX>
    <SectionContainer class="py-8 md:py-12">
      <HeroUMERED />
    </SectionContainer>
    <SectionFullX class="py-16 md:py-12">
      <BannerPreguntas />
    </SectionFullX>
    <SectionContainer class="py-8 md:py-12">
      <Marcas />
    </SectionContainer>
  </main>
</Layout>
